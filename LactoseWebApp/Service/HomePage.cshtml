@model LactoseWebApp.Service.IServiceInfo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aurora @Model.Name</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f0f4f8;
            color: #333;
            text-align: center;
            line-height: 1.6;
        }
        .container {
            background-color: #ffffff;
            padding: 40px 60px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 90%;
            box-sizing: border-box;
        }
        h1 {
            color: #2c3e50;
            font-size: 3em;
            margin-bottom: 20px;
            word-wrap: break-word;
        }
        h2 {
            color: #2c3e50;
            font-size: 1.8em;
            margin-top: 30px;
            margin-bottom: 15px;
        }
        p {
            font-size: 1.1em;
            margin-bottom: 15px;
        }
        ul {
            list-style: none;
            margin-top: 10px;
            padding: 10px;
            max-height: 200px;
            overflow-y: auto;
            border: 1px solid #eee;
            border-radius: 8px;
            background-color: #f9f9f9;
        }
        li {
            background-color: #eaf2f8;
            margin-bottom: 8px;
            padding: 10px 15px;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1em;
            color: #444;
        }
        .highlight {
            color: #3498db;
            font-weight: bold;
        }
        .status-running { color: #27ae60; font-weight: bold; }
        .status-stopped { color: #e74c3c; font-weight: bold; }
        .status-degraded { color: #f39c12; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container">
        <h1><span class="highlight">Lactose @Model.Name</span></h1>
        <p>Status: <span class="status-@Model.Status.ToString().ToLower()">@Model.Status.ToString().ToLower()</span></p>
        <p><strong>ID:</strong> <span class="highlight">@Model.Id</span></p>
        <p><strong>Hostname:</strong> <span class="highlight">@Model.Hostname</span></p> 
        <p>@Model.Description</p>
        <h2>Dependencies (@Model.Dependencies.Length)</h2>
        <ul>
            @foreach (var dependency in Model.Dependencies)
            {
                <li>@dependency</li>
            }
        </ul>
    </div>
</body>
</html>