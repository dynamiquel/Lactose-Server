{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Certificates": {
      "Default": {
        "Path": "/run/secrets/lactose-cert-fullchain",
        "KeyPath": "/run/secrets/lactose-cert-privkey"
      }
    }
  },
  "Service": {
    "ServiceName" : "Tasks",
    "Description": "Provides a task (achievement-like) system for players",
    "Dependencies": [
      "MongoDB"
    ],
    "Version": "0.1"
  },
  "Auth": {
    "Enabled": true
  },
  "Tasks" : {
    "Database" : {
      "Connection" : "mongodb://lactose-tasks-db:27017",
      "Database": "tasksdb",
      "Collection": "tasks"
    }
  },
  "UserTasks" : {
    "Database" : {
      "Connection" : "mongodb://lactose-tasks-db:27017",
      "Database": "tasksdb",
      "Collection": "user_tasks"
    }
  },
  "Economy" : {
    "Url": "https://lactose.mookrata.ovh/economy"
  },
  "Simulation" : {
    "Url": "https://lactose.mookrata.ovh/simulation"
  }
}
