{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Certificates": {
      "Default": {
        "Path": "/run/secrets/lactose-cert-fullchain",
        "KeyPath": "/run/secrets/lactose-cert-privkey"
      }
    }
  },
  "Service": {
    "ServiceName" : "Identity",
    "Description": "Provides basic user information",
    "Dependencies": [
      "MongoDB"
    ],
    "Version": "0.1"
  },
  "Auth": {
    "Enabled": true
  },
  "Roles": {
    "Database" : {
      "Connection" : "mongodb://lactose-identity-db:27017",
      "Database": "identitydb",
      "Collection": "roles"
    }
  },
  "Users": {
    "Database" : {
      "Connection" : "mongodb://lactose-identity-db:27017",
      "Database": "identitydb",
      "Collection": "users"
    }
  },
  "RefreshTokens": {
    "Database" : {
      "Connection" : "mongodb://lactose-identity-db:27017",
      "Database": "identitydb",
      "Collection": "refresh_tokens"
    }
  }
}
