{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Certificates": {
      "Default": {
        "Path": "/run/secrets/lactose-cert-fullchain",
        "KeyPath": "/run/secrets/lactose-cert-privkey"
      }
    }
  },
  "Service": {
    "ServiceName" : "Config",
    "Description": "Allows games to be configured and updated from the cloud",
    "Dependencies": [
      "MongoDB"
    ],
    "Version": "0.1"
  },
  "Config" : {
    "Database" : {
      "Connection" : "mongodb://lactose-config-db:27017",
      "Database": "configdb",
      "Collection": "config"
    }
  }
}
