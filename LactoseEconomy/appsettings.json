{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Certificates": {
      "Default": {
        "Path": "/run/secrets/lactose-cert-fullchain",
        "KeyPath": "/run/secrets/lactose-cert-privkey"
      }
    }
  },
  "Service": {
    "ServiceName" : "Economy",
    "Description": "Provides an economy to a game that players can participate in",
    "Dependencies": [
      "MongoDB"
    ],
    "Version": "0.1"
  },
  "Items" : {
    "Database" : {
      "Connection" : "mongodb://lactose-economy-db:27017",
      "Database": "economydb",
      "Collection": "items"
    }
  },
  "Transactions" : {
    "Database" : {
      "Connection" : "mongodb://lactose-economy-db:27017",
      "Database": "economydb",
      "Collection": "transactions"
    }
  },
  "UserItems" : {
    "Database" : {
      "Connection" : "mongodb://lactose-economy-db:27017",
      "Database": "economydb",
      "Collection": "user_items"
    }
  },
  "ShopItems" : {
    "Database" : {
      "Connection" : "mongodb://lactose-economy-db:27017",
      "Database": "economydb",
      "Collection": "shop_items"
    }
  }
}
